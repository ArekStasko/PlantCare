{
  "runtime": "Net80",
  "documentGenerator": {
    "fromController": true,
    "assemblyPaths": [
      "../PlantCare.API/bin/Debug/net8.0/PlantCare.API.dll"
    ],
    "controllerNames": ["HumidityMeasurementsController", "ModuleController", "PlaceController", "PlantController"],
    "referencePaths": ["../PlantCare.API/bin/Debug/net8.0"]
  },
  "codeGenerators": {
    "openApiToTypeScriptClient": {
      "className": "{controller}Client",
      "template": "Fetch",
      "httpClass": "HttpClient",
      "promiseType": "Promise",
      "typeStyle": "Interface",
      "generateClientInterfaces": true,
      "generateDtoTypes": true,
      "generateOptionalParameters": true,
      "output": "./contracts/apiClient.ts"
    }
  }
}